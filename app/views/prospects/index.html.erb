<% provide(:title, "Making Sales a Competitive Sport") %>

<div id="agent-view">
  <div class="container-fluid">
    <div class="panel panel-default col-md-6" id="panel-container">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-12 right">
            <%= form_tag import_prospects_path, multipart: true, class: 'form-inline' do %>
              <div class="form-group">
                <%= submit_tag "Import CSV", class: 'btn btn-info btn-sm' %>
              </div>
              <div class="form-group">
                <%= file_field_tag :file %>
              </div>
              <div class="form-group">
                <%= link_to "Export CSV", prospects_path(format: "csv"), class: 'btn btn-primary btn-sm' %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <strong>Listing Prospects</strong>
          </div>
        </div>
      </div>
      <div class="container-fluid">
        <div class="col-xs-12 center">
          <br>
          <table border="1" width="100%">
            <tr background="black">
              <th>UserID</th><th>Campaign</th><th>List#</th><th>Company</th>
              <!--<th>Co Phone</th><th>City</th><th>State</th><th>Full Name</th><th>Title</th>-->
              <th>Show</th><th>Edit</th><th>Delete</th>
            </tr>
            <% @prospects.each do |p| %>
            <tr>
              <td><%= p.user_id %></td><td><%= p.campaign %></td><td><%= p.list_number %></td><td><%= p.company %></td>
              <!--<td><%= p.company_phone %></td><td><%= p.city %></td><td><%= p.state %></td>-->
              <!--<td><%= p.first_name %> <%= p.last_name %></td><td><%= p.title %></td>-->
              <td><%= link_to 'Show', p, class: "btn btn-default btn-xs" %></td>
              <td><%= link_to "Edit", edit_prospect_path(p), class: "btn btn-warning btn-xs" %></td>
              <td><%= link_to "Delete", p, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger btn-xs" %></td>
            </tr>
            <% end %>
          </table>
          <br>
        </div>
      </div>
      <div class="panel-footer">
        <div class="btn-toolbar">
          <%= link_to 'New Prospect', new_prospect_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>