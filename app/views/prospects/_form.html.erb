<%= form_for(@prospect) do |f| %>
  <% if @prospect.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@prospect.errors.count, "error") %> prohibited this prospect from being saved:</h2>
      <ul>
        <% @prospect.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div id="agent-view">
  <div class="container-fluid">
    <div class="panel panel-default col-md-6" id="panel-container">
      <div class="panel-heading">
        <h2 class="panel-title">Edit / Update Prospect</h2>
      </div>
      <div class="container-fluid">
        
       <div class="row">
          <div class="form-group col-xs-6">
            <%= f.label :campaign %>
            <%= f.text_field :campaign, class: "form-control" %>
          </div>
          <div class="form-group col-xs-6">
            <%= f.label :list_number %>
            <%= f.text_field :list_number, class: "form-control" %>
          </div>
        </div>
        
        <div class="row">
          <div class="form-group col-xs-6">
            <%= f.label :company %>
            <%= f.text_field :company, class: "form-control" %>
          </div>
        </div>
        
        <div class="row">
          <div class="form-group col-xs-6">
          <%= f.label :company_phone %>
          <%= f.text_field :company_phone, class: "form-control" %>
          </div>
          <div class="form-group col-xs-6">
            <%= f.label :website %>
            <%= f.text_field :website, class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-xs-6">
            <%= f.label :address %>
            <%= f.text_field :address, class: "form-control" %>
          </div>
          <div class="form-group col-xs-6">
            <%= f.label :address2 %>
            <%= f.text_field :address2, class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-xs-3">
            <%= f.label :city %>
            <%= f.text_field :city, class: "form-control" %>
          </div>
          <div class="form-group col-xs-3">
            <%= f.label :state %>
            <%= f.text_field :state, class: "form-control" %>
          </div>
          <div class="form-group col-xs-3">
            <%= f.label :zip %>
            <%= f.text_field :zip, class: "form-control" %>
          </div>
          <div class="form-group col-xs-3">
            <%= f.label :county %>
            <%= f.text_field :county, class: "form-control" %>
          </div>
          <div class="row">
            <div class="col-xs-12 center">
              <a href="#more" class="btn btn-info btn-xs" role="button" data-toggle="collapse">More Prospect Company Info Fields</a><br>&nbsp;
            </div>
          </div>
        </div>

    <!--Additional fields for the prospective company-->
        <div id="more" class="collapse">
          <div class="row">
            <div class="col-xs-12"><hr></div>
          </div>
          <div class="row">
            <div class="col-xs-10"></div>
            <div class="col-xs-2">
              <a href="#more" data-toggle="collapse" class="btn btn-default btn-xs" type="button" >
              <span class="fa fa-close"></span></a>
            </div>
          </div>
          
          <div class="row">
            <div class="form-group col-xs-6">
              <%= f.label :numberofemployees %>
              <%= f.text_field :numberofemployees, class: "form-control" %>
            </div>
            <div class="form-group col-xs-6">
              <%= f.label :fax %>
              <%= f.text_field :fax, class: "form-control" %>
            </div>
          </div>
          
          
          <div class="row">
            <div class="form-group col-xs-6">
              <%= f.label :sic %>
              <%= f.text_field :sic, class: "form-control" %>
            </div>
            <div class="form-group col-xs-6">
              <%= f.label :source %>
              <%= f.text_field :source, class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-xs-6">
            <%= f.label :other1 %>
            <%= f.text_field :other1, class: "form-control" %>
            </div>
            <div class="form-group col-xs-6">
            <%= f.label :other2 %> 
            <%= f.text_field :other2, class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-xs-6">
            <%= f.label :other3 %>
            <%= f.text_field :other3, class: "form-control" %>
            </div>
            <div class="form-group col-xs-6">
            <%= f.label :other4 %>
            <%= f.text_field :other4, class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-xs-6">
            <%= f.label :other5 %>
            <%= f.text_field :other5, class: "form-control" %>
            </div>
            <div class="form-group col-xs-6">
            <%= f.label :other6 %>
            <%= f.text_field :other6, class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-xs-6">
            <%= f.label :other7 %>
            <%= f.text_field :other7, class: "form-control" %>
            </div>
            <div class="form-group col-xs-6">
            <%= f.label :other8 %>
            <%= f.text_field :other8, class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-6">User ID: <%= @prospect.user_id %></div>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <div class="btn-toolbar">
          <%= link_to 'Cancel', @prospect, class: "btn btn-default" %>
          <%= link_to "Delete", @prospect, method: :delete, data: { confirm: 'Are you sure you want to delete Prospect?'}, class: "btn btn-danger" %>
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>