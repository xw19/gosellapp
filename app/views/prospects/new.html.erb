<% provide(:title, "Making Sales a Competitive Sport") %>

<%= form_for(@prospect) do |f| %>
  <% if @prospect.errors.any? %>
    <div id="error_explanation">
      <p class="alert alert-danger"><%= pluralize(@prospect.errors.count, "error") %> prohibited this prospect from being saved:</p>
        <% @prospect.errors.full_messages.each do |message| %>
      <p class="alert alert-danger"><em>&nbsp; * <%= message %></em></p>
      <% end %>
    </div>
  <% end %>

<div id="agent-view">
  <div class="container-fluid">
    <div class="panel panel-default col-md-6" id="panel-container">
      <div class="panel-heading">
        <h2 class="panel-title">Add New Prospect</h2>
      </div>
      
      <div class="container-fluid">
        
        <div class="cant-see-me">
          <%= f.hidden_field :user_id, value: current_user.id %>
        </div>

        <div class="row center" style="background: gold;">
          <div class="form-group col-xs-12 center" style="background: gold;">
            Use your phone's camera to Scan Business Card <i class="fa fa-camera"></i>
          </div>
          <div class="col-xs-12" style="background: gold;">
            <input type="file" accept="image/*" capture="camera">
          </div>
        </div>
        
        <div class="row">
          <div class="form-group col-xs-6">
            <%= f.label :campaign %>
            <%= f.text_field :campaign, class: "form-control" %>
          </div>
          <div class="form-group col-xs-6">
            <%= f.label :list_number %>
            <%= f.text_field :list_number, class: "form-control" %>
          </div>
        </div>
        
        <div class="row">
          <div class="form-group col-xs-6">
            <%= f.label :company %>
            <%= f.text_field :company, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group col-xs-4">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
          <div class="form-group col-xs-4">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
          <div class="form-group col-xs-4">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group col-xs-6">
            <%= f.label :company_phone %>
            <%= f.text_field :company_phone, class: "form-control" %>
          </div>
          <div class="form-group col-xs-6">
            <%= f.label :website %>
            <%= f.text_field :website, class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-xs-6">
            <%= f.label :address %>
            <%= f.text_field :address, class: "form-control" %>
          </div>
          <div class="form-group col-xs-6">
            <%= f.label :address2 %>
            <%= f.text_field :address2, class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-xs-3">
            <%= f.label :city %>
            <%= f.text_field :city, class: "form-control" %>
          </div>
          <div class="form-group col-xs-3">
            <%= f.label :state %>
            <%= f.text_field :state, class: "form-control" %>
          </div>
          <div class="form-group col-xs-3">
            <%= f.label :zip %>
            <%= f.text_field :zip, class: "form-control" %>
          </div>
          <div class="form-group col-xs-3">
            <%= f.label :county %>
            <%= f.text_field :county, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <div class="btn-toolbar">
          <div class="col-xs-6">
          <%= link_to 'Back', prospects_path, class: "btn btn-default gradient raised btn-block" %>
          </div>
          <div class="col-xs-6">
          <%= f.submit class: "btn btn-primary gradient raised btn-block pull-right" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>